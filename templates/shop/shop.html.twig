{% extends 'base.html.twig' %}

{% block title %} Shop {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/assets/home.css') }}">
{% endblock %}

{% block body %}
    {{ include("partials/title_section.html.twig", {'name':'Shop'}) }}
    <div class="container">
        <div
            id="react-shop-root"
            data-endpoint="{{ path('api_products') }}"
            data-currency="EUR"
        >
            <div class="react-home-fallback text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Chargement...</span>
                </div>
                <p class="mt-3 mb-0">Chargement de la boutique interactive...</p>
            </div>
        </div>

        <noscript>
            <div class="alert alert-warning mt-4" role="status">
                Activez JavaScript pour profiter de la navigation enrichie de la boutique.
            </div>
        </noscript>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('build/assets/shop.js') }}"></script>
{% endblock %}