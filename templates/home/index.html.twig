{% extends "base.html.twig" %}

{% block title %} AliExprass Shopping ! {% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/assets/home.css') }}">
{% endblock %}

{% block body %}

    {% if homeSlider %}
        {{ include("partials/home_slider.html.twig", {'slider': homeSlider }) }}
    {% else %}
        {{ include("partials/title_section.html.twig", {'name':'Home Page'}) }}
    {% endif %}

    <div class="container">
        <div
            id="react-home-root"
            data-endpoint="{{ path('api_products') }}"
            data-currency="EUR"
        >
            <div class="react-home-fallback text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Chargement...</span>
                </div>
                <p class="mt-3 mb-0">Chargement de la selection de produits...</p>
            </div>
        </div>

        <noscript>
            <div class="alert alert-warning mt-4" role="status">
                Activez JavaScript pour decouvrir notre nouvelle experience interactive.
            </div>
        </noscript>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('build/assets/home.js') }}"></script>
{% endblock %}