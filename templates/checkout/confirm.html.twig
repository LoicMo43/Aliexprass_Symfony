{% extends 'base.html.twig' %}

{% block title %}Final Checkout AliExprass{% endblock %}

{% block scriptStripe %}
    <script src="https://js.stripe.com/v3/"></script>
{% endblock scriptStripe %}

{% block body %}
    {{ include("partials/title_section.html.twig", {'name':'Checkout'}) }}
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="heading_s1">
                        <h4>Veuillez vérifier votre adresse de livraison</h4>
                        <div class="content" id="address">
                            {{ address | replace({'[spr]' : '<br>'}) | raw }} {# Look 'CheckoutType' for more information #}
                            <a href="{{ path('address_edit', {'id': address.id }) }}" class="btn btn-fill-out btn-block mt-3">Modifier l'adresse</a>
                            <a href="{{ path('checkout_edit') }}" class="btn btn-fill-out btn-block mt-3">Changer d'adresse</a>
                        </div>
                    </div>
                    <div class="heading_s1">
                        <h4>Veuillez vérifier votre transporteur</h4>
                        <div class="content" id="carrier">
                            {{ carrier | replace({'[spr]' : '<br>'}) | raw }}
                            <a href="{{ path('checkout_edit') }}" class="btn btn-fill-out btn-block mt-3">Changer de transporteur</a>
                        </div>
                    </div>
                    {% if information %}
                        <div class="heading_s1">
                            <h4>Veuillez vérifier vos informations complémentaires</h4>
                            <div class="form-group mb-0" id="informations">
                                {{ information }}
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="col-md-6">
                    <div class="order_review">
                        <div class="heading_s1">
                            <h4>Your Orders</h4>
                        </div>
                        <div class="table-responsive order_table">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for element in cart.products %}
                                    <tr>
                                        <td> {{ element.product.name }} <span class="product-qty"> x{{ element.quantity }}</span></td>
                                        <td>{{ element.product.price / 100 }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>SubTotal HT</th>
                                    <td class="product-subtotal">{{ cart.data.subTotalHT }}</td>
                                </tr>
                                <tr>
                                    <th>Taxe</th>
                                    <td class="product-subtotal">{{ cart.data.taxe }}</td>
                                </tr>
                                <tr>
                                    <th>Shipping ({{ carrier.name }})</th>
                                    <td class="product-subtotal">{{ carrier.price / 100 }}</td>
                                </tr>
                                <tr>
                                    <th>Total</th>
                                    <td class="product-subtotal">{{ cart.data.subTotalTTC + (carrier.price / 100) }} €</td>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="payment_method">
                            <div class="heading_s1">
                                <h4>Paiement</h4>
                            </div>
                        </div>
                        <form action="{{ path('create_checkout_session', {'reference': reference}) }}" method="POST">
                            <button type="submit" id="checkout-button" class="btn btn-fill-out btn-block">Payer | {{ cart.data.subTotalTTC + (carrier.price / 100) }} € </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
